<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All functions
    </h1>

    <a href="/functions/new" class="btn btn-block btn-outline-secondary">
      Add a new function
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "function_templates/functions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Function name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @functions.each do |function| %>
      <tr>
        <td>
          <%= function.id %>
        </td>

        <td>
          <%= function.function_name %>
        </td>

        <td>
          <%= time_ago_in_words(function.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(function.updated_at) %> ago
        </td>

        <td>
          <a href="/functions/<%= function.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @functions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
