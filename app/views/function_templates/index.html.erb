<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All functions
    </h1>

    <a href="/functions/new" class="btn btn-block btn-outline-secondary">
      Add a new function
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Function name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @functions.each do |function| %>
      <tr>
        <!-- Display function.id start -->
        <td>
          <%= function.id %>
        </td>
        <!-- Display function.id end -->

        <!-- Display function.function_name start -->
        <td>
          <%= function.function_name %>
        </td>
        <!-- Display function.function_name end -->

        <!-- Display function.created_at start -->
        <td>
          <%= time_ago_in_words(function.created_at) %> ago
        </td>
        <!-- Display function.created_at end -->

        <!-- Display function.updated_at start -->
        <td>
          <%= time_ago_in_words(function.updated_at) %> ago
        </td>
        <!-- Display function.updated_at end -->

        <td>
          <a href="/functions/<%= function.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
