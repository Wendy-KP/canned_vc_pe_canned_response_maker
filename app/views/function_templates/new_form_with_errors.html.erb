<% if @function.present? %>
  <% if @function.errors.any? %>
    <% @function.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new function
</h1>


<hr>

<form action="/create_function" method="post">

  <div class="form-group">
    <label for="function_name">
      Function name
    </label>

    <input type="text" id="function_name" name="function_name" class="form-control" value="<%= @function.function_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create function
  </button>
</form>

<hr>

<a href="/functions">
  Go back
</a>
