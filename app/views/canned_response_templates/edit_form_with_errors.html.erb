<% if @canned_response.errors.any? %>
  <% @canned_response.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit canned response #<%= @canned_response.id %>
</h1>

<hr>

<form action="/update_canned_response/<%= @canned_response.id %>" method="post">

  <div class="form-group">
    <label for="template_id">
      Template
    </label>

    <%= select_tag(:template_id, options_from_collection_for_select(Template.all, :id, :description, @canned_response.template_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="email_text">
      Email text
    </label>

    <textarea id="email_text" name="email_text" class="form-control" rows="3"><%= @canned_response.email_text %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update canned response
  </button>
</form>

<hr>

<a href="/canned_responses">
  Go back
</a>
