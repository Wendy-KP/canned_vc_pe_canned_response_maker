<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All canned responses
    </h1>

    <a href="/canned_responses/new" class="btn btn-block btn-outline-secondary">
      Add a new canned response
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "canned_response_templates/canned_responses_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Template
        </th>

        <th>
          Email text
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @canned_responses.each do |canned_response| %>
      <tr>
        <td>
          <%= canned_response.id %>
        </td>

        <td>
          <% if canned_response.template.present? %>
            <a href="/templates/<%= canned_response.template.id %>">
              <%= canned_response.template.description %>
            </a>
          <% end %>
        </td>

        <td>
          <%= canned_response.email_text %>
        </td>

        <td>
          <%= time_ago_in_words(canned_response.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(canned_response.updated_at) %> ago
        </td>

        <td>
          <a href="/canned_responses/<%= canned_response.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @canned_responses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
