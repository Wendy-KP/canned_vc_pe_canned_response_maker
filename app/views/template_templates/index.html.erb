<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All templates
    </h1>

    <a href="/templates/new" class="btn btn-block btn-outline-secondary">
      Add a new template
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Template text
        </th>

        <th>
          Function
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @templates.each do |template| %>
      <tr>
        <!-- Display template.id start -->
        <td>
          <%= template.id %>
        </td>
        <!-- Display template.id end -->

        <!-- Display template.description start -->
        <td>
          <%= template.description %>
        </td>
        <!-- Display template.description end -->

        <!-- Display template.template_text start -->
        <td>
          <%= template.template_text %>
        </td>
        <!-- Display template.template_text end -->

        <!-- Display template.function_id start -->
        <td>
          <%= template.function_id %>
        </td>
        <!-- Display template.function_id end -->

        <!-- Display template.user_id start -->
        <td>
          <%= template.user_id %>
        </td>
        <!-- Display template.user_id end -->

        <!-- Display template.created_at start -->
        <td>
          <%= time_ago_in_words(template.created_at) %> ago
        </td>
        <!-- Display template.created_at end -->

        <!-- Display template.updated_at start -->
        <td>
          <%= time_ago_in_words(template.updated_at) %> ago
        </td>
        <!-- Display template.updated_at end -->

        <td>
          <a href="/templates/<%= template.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
