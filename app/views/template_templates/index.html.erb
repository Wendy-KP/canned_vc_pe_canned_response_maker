<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All templates
    </h1>

    <a href="/templates/new" class="btn btn-block btn-outline-secondary">
      Add a new template
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "template_templates/templates_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Template text
        </th>

        <th>
          Function
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @templates.each do |template| %>
      <tr>
        <td>
          <%= template.id %>
        </td>

        <td>
          <%= template.description %>
        </td>

        <td>
          <%= template.template_text %>
        </td>

        <td>
          <% if template.function.present? %>
            <a href="/functions/<%= template.function.id %>">
              <%= template.function.function_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if template.user.present? %>
            <a href="/users/<%= template.user.id %>">
              <%= template.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(template.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(template.updated_at) %> ago
        </td>

        <td>
          <a href="/templates/<%= template.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @templates, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
