<h1>
  Add a new template
</h1>


<hr>

<form action="/create_template" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="function_id">
      Function
    </label>

    <%= select_tag(:function_id, options_from_collection_for_select(Function.all, :id, :function_name, @template.function_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create template
  </button>
</form>

<hr>

<a href="/templates">
  Go back
</a>
