<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Template #<%= @template.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/templates" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/templates/<%= @template.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit template
        </a>
      </div>

      <div class="col">
        <a href="/delete_template/<%= @template.id %>" class="btn btn-block btn-outline-secondary">
          Delete template
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @template.description %>
      </dd>

      <dt>
        Template text
      </dt>
      <dd>
        <%= @template.template_text %>
      </dd>

      <dt>
        Function
      </dt>
      <dd>
        <% if @template.function.present? %>
          <a href="/functions/<%= @template.function_id %>">
            <%= @template.function.function_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @template.user.present? %>
          <a href="/users/<%= @template.user_id %>">
            <%= @template.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@template.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@template.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

