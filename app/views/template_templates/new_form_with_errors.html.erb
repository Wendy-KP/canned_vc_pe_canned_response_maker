<% if @template.present? %>
  <% if @template.errors.any? %>
    <% @template.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new template
</h1>


<hr>

<form action="/create_template" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @template.description %></textarea>
  </div>

  <div class="form-group">
    <label for="template_text">
      Template text
    </label>

    <textarea id="template_text" name="template_text" class="form-control" rows="3"><%= @template.template_text %></textarea>
  </div>

  <div class="form-group">
    <label for="function_id">
      Function
    </label>

    <%= select_tag(:function_id, options_from_collection_for_select(Function.all, :id, :function_name, @template.function_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @template.user_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create template
  </button>
</form>

<hr>

<a href="/templates">
  Go back
</a>
