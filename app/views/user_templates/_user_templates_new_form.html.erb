<form action="/create_template_from_user" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @template.description %></textarea>
  </div>

  <div class="form-group">
    <label for="template_text">
      Template text
    </label>

    <textarea id="template_text" name="template_text" class="form-control" rows="3"><%= @template.template_text %></textarea>
  </div>

  <div class="form-group">
    <label for="function_id">
      Function
    </label>

    <%= select_tag(:function_id, options_from_collection_for_select(Function.all, :id, :function_name, @template.function_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= @user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create template
  </button>
</form>
